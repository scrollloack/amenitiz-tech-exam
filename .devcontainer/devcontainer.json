{
  "name": "tech-exam",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers-extra/features/zsh-plugins:0": {
      "username": "vscode",
      "plugins": "bundler git rails ruby"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.Ruby",
        "Shopify.ruby-lsp",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "wingrunr21.vscode-ruby",
        "misogi.ruby-rubocop",
        "hridoy.rails-snippets",
        "kaiwood.endwise",
        "esbenp.prettier-vscode",
        "karunamurti.rspec-snippets",
        "2gua.rainbow-brackets",
        "oderwat.indent-rainbow"
      ]
    },
    "settings": {
      "files.associations": {
        "Gemfile": "ruby"
      },
      "[ruby]": {
        "editor": {
          "defaultFormatter": "Shopify.ruby-lsp",
          "formatOnSave": true,
          "tabSize": 2,
          "insertSpaces": true,
          "semanticHighlighting.enabled": true,
          "formatOnType": true
        }
      },
      "[erb]": {
        "editor": {
          "formatOnSave": false
        }
      },
      "rubyLsp": {
        "rubyVersionManager": "rbenv",
        "formatter": "rubocop",
        "bundleGemfile": "../.ruby-lsp/Gemfile"
      },
      "[yaml, yml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      },
      "prettier": {
        "configPath": ".devcontainer/prettierrc.yaml"
      },
      "terminal.integrated.defaultProfile.linux": "zsh"
    }
  },
  "postStartCommand": "git config --global --add safe.directory /workspaces/app",
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": ".devcontainer/postCreate",
  "forwardPorts": [3000, 5432],
  "remoteUser": "vscode"
}
